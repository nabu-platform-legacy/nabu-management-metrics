[route=metricsDatabase], [route=metricsLocal], [route=metricsRemote] {
	
	.optional {
		.category {
				white-space: nowrap;
			.type {
				padding: 10px;
				cursor: pointer;
				
				&:hover {
					background-color: #fafafa;
				}
			}
			
			ul {
				margin: 0px;
				margin-top: 10px;
				
				li {
					margin: 0px;
					list-style-type: none;
					
					a:hover {
						text-decoration: underline;
					}
				}
			}
		}
	}
}